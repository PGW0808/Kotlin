<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_workout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo_height"
        android:src="@drawable/workout_image"
        android:background="#05080F"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toTopOf="@+id/fl_start"
        app:layout_constraintTop_toTopOf="@+id/iv_backgroundImage"/>

    <ImageView
        android:id="@+id/iv_backgroundImage"
        android:layout_width="@dimen/background_img_weight"
        android:layout_height="@dimen/background_img_height"
        android:contentDescription="@string/background_image"
        android:background="@drawable/background1"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@+id/iv_workout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <FrameLayout
        android:id="@+id/fl_start"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_workout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/start_button_ripple_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/start"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>